@model IEnumerable<EmployeesAdmin.Models.Employee>

@{
    ViewData["Title"] = "Index";
}



<div class="container p-4">

    <div class="row">
        <div class="col-md-12">
            <h2>Employees management view </h2>

        </div>

    </div>  
    

    <div class="row">

        <div class="col-md-6 form1">
            <form class="d-flex" asp-action="Index" asp-controller="Employees">
                <input name="searchString" class="form-control me-1" type="number" placeholder="Search by ID" aria-label="Search"/>
                <button class="btn btn-primary" type="submit"> Search </button>
            </form>

        </div>
        <div class="col-md-6"></div>




    </div>   
    
    
    <div class="row">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                       ID
                    </th>
                    <th>
                        Photo
                    </th>
                    <th>
                       First Name
                    </th>
                    <th>
                       Last Name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                       Contact Number 
                    </th>
                    <th>
                       Age
                    </th>
                    <th>
                       DOB 
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Salary)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                      Anual Salary
                    </th>
                 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                           
                            <img src="@item.ImageUrl" />

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dob)
                        </td>
                        <td>

                            <output asp-format="{0:#,###.00}" value="$@item.Salary" >@item.Salary</output>
                            
                            
                        </td>                       
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            <output asp-format="{0:#,###.00}" value="$@item.AnualSalary">@item.AnualSalary</output>
                        </td>
                      
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>
 
